[Unit]
Description=LED control
After=network.target

[Service]
WorkingDirectory=/home/hypafrag/Projects/remoteled/luasand
ExecStart=/home/hypafrag/Projects/remoteled/luasand/luasand /dev/serial/by-id/usb-Arduino_LLC_Arduino_Leonardo-if00 80 /prg
KillMode=process
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
